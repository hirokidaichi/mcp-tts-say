{
  "name": "mcp-tts-say",
  "version": "1.0.0",
  "description": "MCP server for text-to-speech playback",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "example": "ts-node-esm src/example.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "inspect": "mcp-inspector ts-node -- src/main.ts",
    "inspect:dev": "CLIENT_PORT=5173 SERVER_PORT=3000 mcp-inspector ts-node -- src/main.ts"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^22.13.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.4.1",
    "dotenv": "^16.4.7",
    "openai": "^4.82.0",
    "play-sound": "^1.1.6",
    "zod": "^3.24.1"
  }
}
